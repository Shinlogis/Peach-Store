<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Cart">

	<resultMap type="Cart" id="selectCartByUserId">
		<id column="cart_id" property="cart_id"/>
		<association column="user_id" property="user" javaType="User"
			select="User.selectById"/>
	</resultMap>

<!-- 	<select id="selectById" resultMap="selectCartByUserId">
		select * from cart where user_id = #{user.user_id}
	</select> -->
	<select id="selectById" resultMap="selectCartByUserId">
		select * from cart where cart_id = #{cart_id}
	</select>
	<insert id="insert" parameterType="int">
		insert into cart (user_id) values (#{user_id})
	</insert>
</mapper>