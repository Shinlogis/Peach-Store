<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="peachstore.repository.gradeCoupon.GradeCouponDAO">

	<resultMap id="GradeCouponResultMap" type="GradeCoupon">
		<result column="grade_coupon_id" property="gradeCouponId" />
		<result column="issue_rule" property="issueRule" />
		<result column="is_active" property="isActive" />

		<!-- 하나의 등급을 가짐 -->
		<association column="user_grade_id" property="userGrade"
			javaType="peachstore.domain.UserGrade"
			select="peachstore.repository.gradeCoupon.UserGradeDAO.selectById" />

		<!-- 하나의 쿠폰을 가짐 -->
		<association column="coupon_id" property="coupon"
			javaType="peachstore.domain.Coupon"
			select="peachstore.repository.coupon.CouponDAO.selectById" />
	</resultMap>

	<!-- 전체 조회 -->
	<select id="selectAll" resultMap="GradeCouponResultMap">
		SELECT gc.*, ug.*, c.*
		FROM grade_coupon gc
		JOIN user_grade ug 
			ON gc.user_grade_id = ug.user_grade_id
		JOIN coupon c 
			ON gc.coupon_id = c.coupon_id
	</select>

</mapper>
