<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">

	<select id="selectByName" resultType="User" parameterType="String"> 
		select * from user where id = #{id}
	</select>
	
	<select id="selectById" resultType="User" parameterType="String"> 
		select * from user where id = #{id}
	</select>
	
	<select id="select" parameterType="int" resultType="User">
		select * from user where user_id = #{user_id}
	</select>
	
	<insert id="insert" parameterType="User">
		insert into user(id, email, password, user_name, sns_provider_id)
		values(#{id}, #{email}, #{password}, #{user_name}, #{snsProvider.sns_provider_id})
	</insert>
	
</mapper>