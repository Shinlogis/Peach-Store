<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="InquiryImg">
	
	<insert id="insert" parameterType="InquiryImg">
		insert into inquiry_img(filename, inquiry_id) values(#{filename},#{inquiry.inquiry_id})
	</insert>
	
	<select id="selectByInquiry" parameterType="int" resultType="InquiryImg">
		select inquiry_img_id, filename, inquiry_id from inquiry_img where inquiry_id = #{inquiry_id}
	</select>
	
	<update id="update" parameterType="InquiryImg">
		update inquiry_img set filename=#{filename} where inquiry_img_id = #{inquiry_img_id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from inquiry_img where inquiry_id = #{inquiry_id}
	</delete>

</mapper>