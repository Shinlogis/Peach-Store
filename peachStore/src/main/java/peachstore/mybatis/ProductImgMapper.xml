<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProductImg">
	
	<insert id="insert" parameterType="ProductImg">
		insert into product_img(product_id, filename) values(#{product.productId}, #{filename})
	</insert>
	
	<select id="selectByProductId" parameterType="int" resultType="ProductImg">
		select product_img_id, product_id, filename from product_img where product_id=#{productId}
	</select>
	
	<delete id="deleteByFilename" parameterType="String">
	  DELETE FROM product_img WHERE filename = #{filename}
	</delete>
</mapper>
